{
	"name": "figma-sync",
	"displayName": "figma-sync",
	"description": "Tools to keep Figma designs and front-end code in sync",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.33.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"workspaceContains:*.less"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "figmasync.syncLessFile",
				"title": "Sync a LESS file to a Figma file"
			},
			{
				"command": "figmasync.refreshComponents",
				"title": "Refresh components",
				"icon": {
					"dark": "media/refresh.svg",
					"light": "media/refresh-light.svg"
				}
			},
			{
				"command": "figmasync.linkLayer",
				"title": "Connect Layer",
				"icon": {
					"light": "media/link.svg",
					"dark": "media/link.svg"
				}
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "figmasync.refreshComponents",
					"when": "view == figmaComponents",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "figmasync.linkLayer",
					"when": "view == figmaComponents",
					"group": "inline"
				}
			]
		},
		"configuration": {
			"type": "object",
			"title": "Figma Sync",
			"properties": {
				"APIKey": {
					"type": "string",
					"default": "",
					"description": "Your Figma API key"
				}
			}
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "figmaSync",
					"title": "Figma Sync",
					"icon": "media/figmacomponent.svg"
				}
			]
		},
		"views": {
			"figmaSync": [
				{
					"id": "figmaComponents",
					"name": "Figma Components"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"tslint": "^5.12.1",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42"
	},
	"dependencies": {
		"figma-js": "^1.6.1",
		"less": "^3.9.0"
	}
}
